<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".WelcomePage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_all_color">
        <TextView
            android:id="@+id/list_all"
            android:text="@string/list_all"
            android:background="?android:attr/selectableItemBackground"
            style="@style/CategoryStyle" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/breakfast_color">
        <TextView
            android:text="breakfast"
            android:id="@+id/breakfast_textview"
            android:background="?android:attr/selectableItemBackground"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lunch_color">
        <TextView
            android:id="@+id/lunch_textview"
            android:text="lunch"
            android:background="?android:attr/selectableItemBackground"
            style="@style/CategoryStyle" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dinner_color">
        <TextView
            android:text="dinner"
            android:id="@+id/dinner_textview"
            android:background="?android:attr/selectableItemBackground"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dessert_color">
        <TextView
            android:text="Dessert"
            android:id="@+id/desserts_textview"
            android:background="?android:attr/selectableItemBackground"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cocktail_color">
        <TextView
            android:text="Coktails"
            android:id="@+id/cocktails_textview"
            android:background="?android:attr/selectableItemBackground"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />

</androidx.appcompat.widget.LinearLayoutCompat>