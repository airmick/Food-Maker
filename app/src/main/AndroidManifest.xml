<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.airmick.foodmaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodMaker">

        <activity
            android:name=".WelcomePage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".WelcomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomePage" />
        </activity>
        <activity
            android:name=".FoodActivity"
            android:exported="false"
            android:label="@string/food_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".BreakfastActivity"
            android:exported="false"
            android:label="Breakfast"
            android:parentActivityName=".WelcomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomePage" />
        </activity>
        <activity
            android:name=".categoryActivities.LunchActivity"
            android:exported="false"
            android:label="Lunch"
            android:parentActivityName=".WelcomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomePage"/>
        </activity>
        <activity
            android:name=".categoryActivities.DinnerActivity"
            android:exported="false"
            android:label="Dinner"
            android:parentActivityName=".WelcomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomePage"/>

        </activity>
        <activity
            android:name=".categoryActivities.DessertActivity"
            android:exported="false"
            android:label="Dessert"
            android:parentActivityName=".WelcomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomePage"/>
        </activity>
        <activity
            android:name=".categoryActivities.CocktailActivity"
            android:exported="false"
            android:label="Cocktail"
            android:parentActivityName=".WelcomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomePage"/>
        </activity>
    </application>

</manifest>